<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.zeeroapps.wssp.fragments.WaterSupplyFragment">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="@dimen/cardview_corners"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#2b62be">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_corners_cardview"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/view_pager_text"
                android:paddingTop="10dp"
                android:text="Water Supply Problem"
                android:textColor="#FFF" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/view_pager_text"
                android:padding="10dp"
                android:text="پانی کا مسئلہ"
                android:textColor="#FFF" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFF"
                android:scaleType="centerCrop"
                android:src="@drawable/water" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>
